<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

        <ImageView
            android:id="@+id/newyork"
            android:layout_width="142dp"
            android:layout_height="144dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="224dp"
            android:src="@drawable/expo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cover" />

        <TextView
            android:id="@+id/expo2"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-black"
            android:text="New York At Night"
            android:textSize="20sp"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/descexp2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descexp2"
            android:layout_width="210dp"
            android:layout_height="86dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="576dp"
            android:fontFamily="sans-serif-light"
            android:text="New York culture in a place, discover the diversity of urbanism, modernism and futurism. No ticket needed."
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cover"
            android:layout_width="368dp"
            android:layout_height="250dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="114dp"
            android:layout_height="47dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/negro49"
            android:text="Tickets"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/newyork"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cover"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="368dp"
        android:layout_height="250dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:foregroundTint="@color/negro49"
        android:text="Explorar"
        android:textAlignment="viewStart"
        android:textColor="@color/negro49"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="344dp"
        android:fontFamily="sans-serif-light"
        android:text="Discover the new vision of Belin through his art. Contemporary art and expresism to the highest level. Buy your tickets now in belin.com or clic the button to buy your tickets."
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="320dp"
        android:fontFamily="sans-serif-black"
        android:text="Light Your Vision"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />


</androidx.constraintlayout.widget.ConstraintLayout>