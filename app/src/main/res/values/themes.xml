<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LADM_U1_PRACTICA1_EventosCulturales" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/negro49</item>
        <item name="colorPrimaryVariant">@color/negro49</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/negro49</item>
        <item name="colorSecondaryVariant">@color/negro49</item>
        <item name="colorOnSecondary">@color/negro49</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Test.Widget.MaterialComponents.MaterialCalendar.Display" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <!-- No need to scale here since the text is already readable -->
        <item name="android:textSize" tools:ignore="SpUsage">56dp</item>
        <item name="shapeAppearanceOverlay">?shapeAppearanceMediumComponent</item>
    </style>

    <style name="Theme.LADM_U1_PRACTICA1_EventosCulturales.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LADM_U1_PRACTICA1_EventosCulturales.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LADM_U1_PRACTICA1_EventosCulturales.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LADM_U1_PRACTICA1_EventosCulturales.Fullscreen" parent="Theme.LADM_U1_PRACTICA1_EventosCulturales">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.LADM_U1_PRACTICA1_EventosCulturales.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.LADM_U1_PRACTICA1_EventosCulturales.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>